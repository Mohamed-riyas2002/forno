<div class="cake-gallery">
    <div class="search">
        <p>Search Which Cake You like?</p>
        <Input @value={{this.query}} class="search-input" />
    </div>
    <ul style="list-style-type: none;">
        <Cakes::filter @cakes = {{@cakes}} @query={{this.query}} as |results|>
            {{#each results as |rental|}}
                <li><Cakes @cakes={{rental}} /></li>
            {{/each}}
        </Cakes::filter>
        {{!-- <li><Cakes @cakes = {{@model}} /></li> --}}
        {{!-- <li><Cakes /></li> --}}
    </ul>
</div>